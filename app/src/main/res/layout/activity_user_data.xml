<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userDataActivityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dynamic_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activities.UserDataActivity">





    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="160dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/firstProfilePic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_profile_pic" />

            <ImageView
                android:id="@+id/plusImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/add"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/circle"
                />
        </RelativeLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="start">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/firstUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/corners"
            android:elevation="2dp"
            android:inputType="text"
            android:textColor="@color/light_black"
            android:padding="10dp"
            android:paddingStart="15dp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingHorizontal="10dp"
        android:elevation="5dp"
        android:background="@drawable/black_ripple"
        android:textColor="@color/white"
        android:text="Name"
        android:gravity="center"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/nameLoading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="5dp"
        android:visibility="visible"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading_anim" />

</RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:elevation="5dp"
                android:background="@drawable/black_ripple"
                android:textColor="@color/white"
                android:text="About"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/firstAbout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:layout_marginVertical="30dp"
                android:background="@drawable/corners"
                android:elevation="2dp"
                android:inputType="textNoSuggestions|textMultiLine"
                android:padding="10dp"
                android:textColor="@color/light_black"
                android:textSize="15dp" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/aboutLoading"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="5dp"
                android:visibility="visible"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loading_anim" />

        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/go_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/black_ripple"
        android:elevation="5dp"
        android:text="Go"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="5dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/go_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/go_btn"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading_anim" />


</androidx.constraintlayout.widget.ConstraintLayout>
